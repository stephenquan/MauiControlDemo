<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiControlDemo.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiControlDemo">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />

            <local:MauiControl
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Hello, World!" />

            <local:MauiControl
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Welcome to &#10;.NET Multi-platform App UI" />

            <local:MauiControl
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Counts the number of times you click"
                Style="{StaticResource MauiControlButton}"
                Text="Click me" />

            <Slider
                x:Name="slider"
                Maximum="100"
                Minimum="0"
                Value="50" />

            <local:MauiControl
                x:Name="entry"
                Style="{StaticResource MauiControlEntry}"
                TextValue="{Binding Value, Source={Reference slider}, Mode=TwoWay}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
